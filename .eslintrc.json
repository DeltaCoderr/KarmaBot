{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": ["error", "space", {
            "SwitchCase": 1
        }],
        "max-len": ["error", 135],
        "no-tabs": 0,
        "semi": ["error", "always"],
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ]
    }
}